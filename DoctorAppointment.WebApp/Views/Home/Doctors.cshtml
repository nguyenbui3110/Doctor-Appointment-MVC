@using DoctorAppointment.WebApp.Commons.Helpers
@model List<DoctorViewModel>
@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Danh sách bác sĩ</h1>
        <p class="text-muted">Tìm kiếm bác sĩ phù hợp với nhu cầu của bạn</p>
    </div>

    <div class="row g-4">
        @if (Model.Count != 0)
        {
            @foreach (var doctor in Model)
            {
                <div class="col-md-4">
                    <a class="text-decoration-none" href="@Url.Action("DoctorDetail", "Home", new { id = doctor.Id })">
                        <div class="card h-100 shadow-sm">
                            <div class="card-img-top-wrapper">
                                <img src="@Url.Content((doctor.User.AvatarUrl != null) ? doctor.User.AvatarUrl : "~/img/doctorAvatar.png")" 
                                     class="card-img-top rounded-circle mx-auto d-block mt-3" 
                                     alt="@doctor.User.FullName" 
                                     loading="lazy" 
                                     style="width: 120px; height: 120px; object-fit: cover;" />
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title text-dark fw-bold mb-1">@doctor.User.FullName</h5>
                                <h6 class="card-subtitle mb-3 text-muted">Khoa: @DisplayName.GetSpecialization(doctor.Specialization)</h6>
                                <p class="card-text text-truncate">@doctor.About</p>
                            </div>
                            <div class="card-footer bg-white text-center">
                                <button class="btn btn-outline-primary w-100">Xem chi tiết</button>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-danger fs-5">Không tìm thấy bác sĩ</p>
            </div>
        }
    </div>
</div>
