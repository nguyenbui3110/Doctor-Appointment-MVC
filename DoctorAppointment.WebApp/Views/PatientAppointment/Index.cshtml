@using DoctorAppointment.Domain.Enums
@{
}

@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Appointments";
}
<div class="container-xl px-4 mt-4">


    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-header">Filters</div>
        <div class="card-body">
            <form method="get">
                <div class="row gx-3 gy-3">
                    <div class="col-md-4">
                        <label class="form-label" for="dateFilter">From date</label>
                        <input type="date" id="dateFilter" name="dateFilter" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="dateFilter">To date</label>
                        <input type="date" id="dateFilter" name="dateFilter" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" for="statusFilter">Status</label>
                        <select id="statusFilter" name="statusFilter" class="form-select"  asp-items="Html.GetEnumSelectList<AppointmentStatus>()">
                            <option value="" selected disabled>Status</option>
                        </select>
                    </div>
                    <div class="col-md-2 align-self-end">
                        <button class="btn btn-secondary w-100" type="submit">Apply Filters</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Appointment List Section -->
    <div class="card">
        <div class="card-header">Appointments</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Doctor</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample row -->
                        <tr>
                            <td>1</td>
                            <td>John Doe</td>
                            <td>Dr. Smith</td>
                            <td>2024-12-15</td>
                            <td>10:30 AM</td>
                            <td><span class="badge bg-success">Scheduled</span></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fa fa-ban"></i> hủy hẹn
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <!-- Repeat for other appointments -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

