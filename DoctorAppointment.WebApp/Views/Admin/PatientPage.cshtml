@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin";
}
@model PagingItem<PatientViewModel>

<div class="d-flex justify-content-end mb-2">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="">
        Tạo mới bệnh nhân
    </button>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên</th>
            <th scope="col">Email</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.User.FullName</td>
                <td>@item.User.Email</td>
                <td>@item.User.Address</td>
                <td>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletePatientModal_@item.Id" DeleteId="@item.Id">Delete</button>
                    <partial name="_DeletePatient" model="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Paging" model="Model" />
@section Scripts {
    <style>
        .modal-body {
            max-height: 400px;
            overflow-y: auto;
        }
        .modal {
            overflow: hidden;
        }
    </style>
}