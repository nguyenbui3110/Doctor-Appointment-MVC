@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin";
    var searchQuery = ViewBag.SearchQuery ?? "";
}
@model PagingItem<PatientViewModel>

<ul class="navbar-nav me-auto" style="margin-bottom: 10px;">
    <form class="nav-item fw-bold" id="searchForm" asp-controller="Admin" asp-action="PatientPage" method="post">
        <input class="nav-item fw-bold" type="text" name="searchQuery" placeholder="Tên bệnh nhân..."
               class="form-control" aria-label="Search Doctor" value="@ViewBag.SearchQuery"/>
        <button type="submit" class="btn btn-primary fw-bold">Search</button>
    </form>

</ul>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên</th>
            <th scope="col">Email</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.User.FullName</td>
                <td>@item.User.Email</td>
                <td>@item.User.Address</td>
                <td>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletePatientModal_@item.Id" DeleteId="@item.Id">Delete</button>
                    <partial name="_DeletePatient" model="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Paging" model="Model" />

<style>
    .modal-body {
        max-height: 400px;
        overflow-y: auto;
    }
    .modal {
        overflow: hidden;
    }
</style>
