@model Dictionary<DateTime, int>
<script>
    var monthlyctx = document.getElementById('monthlyChart');
    monthlyChart=new Chart(monthlyctx, {
        type: 'line',
        data: {
            labels: @Json.Serialize(Model.Keys),
            datasets: [{
                label: 'Appointments per Month',
                data: @Json.Serialize(Model.Values),
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 2,
                tension: 0.3,
                fill: true
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    type: 'time',
                    time: {
                        unit: 'month'
                    }
                },
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Number of Appointments'
                    }
                }
            },
            plugins: {
                title: {
                    display: true,
                    text: 'Monthly Appointment Distribution'
                },
                zoom: {
                    pan: {
                        enabled: true, // Allow panning
                        mode: 'x',    // Pan in the x direction
                    },
                    zoom: {
                        pinch: {
                            enabled: true // Allow pinch zooming
                        },
                        wheel: {
                            enabled: true ,// Allow zooming with the mouse wheel
                            speed: 0.01
                        },
                        drag:{
                            enabled: true, // Allow dragging to zoom
                        },

                        mode: 'x', // Zoom in the x direction
                    }
                }
            }
        }
    });
</script>