@using DoctorAppointment.Domain.Enums
@model List<AppointmentViewModel>
@{
}

@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Appointments";
}
<div class="container-xl px-4 mt-4">


    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-header">Filters</div>
        <div class="card-body">
            <form method="get">
                <div class="row gx-3 gy-3">
                    <div class="col-md-4">
                        <label class="form-label" for="dateFilter">From date</label>
                        <input type="date" id="dateFilter" name="dateFilter" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="dateFilter">To date</label>
                        <input type="date" id="dateFilter" name="dateFilter" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" for="statusFilter">Status</label>
                        <select id="statusFilter" name="statusFilter" class="form-select"  asp-items="Html.GetEnumSelectList<AppointmentStatus>()">
                            <option value="" selected disabled>Status</option>
                        </select>
                    </div>
                    <div class="col-md-2 align-self-end">
                        <button class="btn btn-secondary w-100" type="submit">Apply Filters</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Appointment List Section -->
    <div class="card">
        <div class="card-header">Appointments</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Doctor</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample row -->
                        @foreach(var Appointment in Model)
                        {
                            <tr>
                                <td>1</td>
                                <td>@Appointment?.PatientName</td>
                                <td>@Appointment?.DoctorName</td>
                                <td>@Appointment?.AppointmentDate</td>
                                <td>@Appointment?.StartTime</td>
                                <td>@Appointment?.Status</td>
                                <td>
                                    <a href="#" class="btn btn-primary">View</a>
                                    <a href="#" class="btn btn-danger">Cancel</a>
                                </td>
                            </tr>
                        }
                        <!-- Repeat for other appointments -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

