@using DoctorAppointment.Domain.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model PagingItem<AppointmentViewModel>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Bệnh nhân</th>
                <th>Bác sĩ</th>
                <th>ngày hẹn</th>
                <th>suất</th>
                <th>trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample row -->
            @foreach (var Appointment in Model.Items)
            {
                <tr>
                    <td></td>
                    <td>@Appointment?.PatientName</td>
                    <td>@Appointment?.DoctorName</td>
                    <td>@Appointment?.AppointmentDate?.ToString("dd/MM/yyyy")</td>
                    <td>@Appointment?.StartTime</td>
                    <td>@Appointment?.Status</td>
                    <td>
                        @if(Appointment.Status == AppointmentStatus.Pending || Appointment.Status == AppointmentStatus.Confirmed)
                        {
                            <a asp-controller="Appointment" asp-action="PatientAppointmentCancel" asp-route-id="@Appointment.Id" class="btn btn-danger">Cancel</a>
                        }
                    </td>
                </tr>
            }
            <!-- Repeat for other appointments -->
        </tbody>
    </table>
</div>
<partial name="_Paging" model="Model"/>