@using DoctorAppointment.Domain.Enums
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Appointment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="#">BookingCare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <form class="nav-item fw-bold" id="searchForm"  asp-controller="Doctor" asp-action="Search" method="post">
                        <input class="nav-item fw-bold" type="text" name="searchQuery" placeholder="Bác Sĩ..."
                            class="form-control" aria-label="Search Doctor" />

                        <select class="nav-item form-select-sm fw-bold" name="Specialization"
                            asp-items="Html.GetEnumSelectList<Specialization>()">
                            <option value="" disabled selected>Khoa</option>
                        </select>

                        <button type="submit" class="btn btn-primary fw-bold">Search</button>
                    </form>

                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">VN</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" href="#">Xin chào,
                                @User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-action="Logout" asp-controller="Auth"><i class="fa fa-sign-out" aria-hidden="true"></i></a> </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-action="Register"
                                asp-controller="Auth">Đăng ký</a></li>
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-action="login"
                                asp-controller="Auth">Đăng nhập</a></li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="min-vh-100">
        @RenderBody()


        <!-- Popular Specialties Section -->
        <div class="container my-5">
            <h2 class="mb-4">Chuyên khoa phổ biến</h2>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Specialty">
                        <div class="card-body text-center">
                            <p class="card-text">Đa khoa</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Specialty">
                        <div class="card-body text-center">
                            <p class="card-text">Tim mạch</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Specialty">
                        <div class="card-body text-center">
                            <p class="card-text">Da liễu</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Specialty">
                        <div class="card-body text-center">
                            <p class="card-text">Thần kinh</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="bg-light py-3">
        <div class="container text-center">
            <p class="mb-0">© 2024 BookingCare</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
