@using DoctorAppointment.Domain.Enums

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@((ViewData["Title"] != null) ? @ViewData["Title"] : "DoctorABC")</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>


<body>
    <div class="min-vh-100">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-action="index" asp-controller="Home">DoctorABC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <form class="nav-item fw-bold" id="searchForm" asp-controller="Home" asp-action="SearchDoctors"
                            method="get">
                            <input class="nav-item fw-bold" type="text" name="searchQuery" placeholder="Bác Sĩ..."
                                class="form-control" aria-label="Search Doctor" />

                            <select class="nav-item form-select-sm fw-bold" name="specialization"
                                asp-items="Html.GetEnumSelectList<Specialization>()">
                                <option value="" disabled selected>Khoa</option>
                            </select>

                            <button type="submit" class="btn btn-primary fw-bold">Search</button>
                        </form>

                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">VN</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-controller="Admin" asp-action="Index">Quản lý</a></li>
                        }
                        @if(User.IsInRole("Doctor"))
                        {
                            <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-controller="Appointment" asp-action="DoctorAppointments">Quản lý</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-controller="Appointment" asp-action="PatientAppointments">Lịch hẹn</a></li>
                        }
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" href="/profile">Xin chào,
                                @User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-action="Logout" asp-controller="Auth"><i class="fa fa-sign-out" aria-hidden="true"></i></a> </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-action="Register"
                                asp-controller="Auth">Đăng ký</a></li>
                        <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-action="login"
                                asp-controller="Auth">Đăng nhập</a></li>
                    }

                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3 mt-5">
        <div class="container text-center">
            <p class="mb-0">© 2024 DoctorABC</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/microsoft-signalr/signalr.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
@RenderSection("Scripts", required: false)

</html>
